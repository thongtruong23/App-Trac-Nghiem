<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:background="@drawable/bgr7"
    tools:context=".slide.TestDoneActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:background="@drawable/titkt"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Kết thúc"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:src="@drawable/dapan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="✔"
            android:paddingTop="60dp"
            android:textColor="#61b451"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số câu đúng:"
            android:paddingTop="70dp"
            android:textColor="#61b451"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  2"
            android:textColor="#61b451"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="✘"
            android:paddingTop="30dp"
            android:textColor="#61b451"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số câu sai:"
            android:textColor="#e80303"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e80303"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="◯"
            android:textColor="#ef992a"
            android:paddingTop="30dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số câu chưa trả lời:"
            android:textColor="#ef992a"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ef992a"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Σ"
            android:paddingTop="30dp"

            android:textColor="#4267b2"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng điểm:"
            android:textColor="#4267b2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4267b2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="2" />
    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:id="@+id/btnAgain"
            android:layout_width="240dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_ktl"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="240dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_thoat"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSaveScore"
            android:layout_width="240dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_luu"
            android:textColor="#ffff"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>